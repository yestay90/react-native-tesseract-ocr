{
  "name": "react-native-tesseract-ocr",
  "version": "2.0.3",
  "description": "Tesseract OCR wrapper for React Native",
  "main": "index.js",
  "files": [
    "README.md",
    "android",
    "index.js",
    "ios",
    "react-native-tesseract-ocr.podspec"
  ],
  "scripts": {
    "cz": "git-cz",
    "release": "standard-version",
    "test": "echo \"Error: no test specified\" && exit 1",
    "clean:node": "npm cache verify && rm -rf node_modules/ && npm --loglevel=error install",
    "clean:ios": "rm -rf ios/build && rm -rf ios/Pods && cd ios && pod install && cd ..",
    "clean:android": "rm -rf android/.gradle && rm -rf android/.idea && rm -rf android/build && rm -rf android/app/build "
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/jonathanpalma/react-native-tesseract-ocr.git",
    "baseUrl": "https://github.com/jonathanpalma/react-native-tesseract-ocr"
  },
  "bugs": {
    "url": "https://github.com/jonathanpalma/react-native-tesseract-ocr/issues"
  },
  "keywords": [
    "react-native",
    "tesseract ocr",
    "optical character recognition",
    "cognitive services",
    "text recognizer"
  ],
  "author": {
    "name": "Jonathan Palma",
    "email": "jonathanpalma.me@gmail.com"
  },
  "license": "MIT",
  "licenseFilename": "LICENSE",
  "readmeFilename": "README.md",
  "peerDependencies": {
    "react": "^17.0.1",
    "react-native": ">=0.64.0-rc.0 <1.0.x"
  },
  "devDependencies": {
    "@commitlint/cli": "^8.3.5",
    "@commitlint/config-conventional": "^8.3.4",
    "cz-conventional-changelog": "^3.1.0",
    "husky": "^4.2.5",
    "react": "^17.0.1",
    "react-native": "^0.64.2",
    "standard-version": "^8.0.2"
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
